<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodels="clr-namespace:Mde.Mvvm.StudentRoulette.ViewModels"
             x:Class="Mde.Mvvm.StudentRoulette.Pages.RoulettePage"
             Title="Roulette"
             x:DataType="viewmodels:RouletteViewModel">
    <Grid ColumnDefinitions="*" RowDefinitions="*">
        <Label 
            Grid.Row="0" Grid.Column="0"
            HorizontalOptions="Center" VerticalOptions="Center"
            HorizontalTextAlignment="Center"
            Text="{Binding NumberOfTimesChosen}"
            TextColor="{StaticResource Gray200}"
            FontSize="150"
            />
        <Label 
            Grid.Row="0" Grid.Column="0"
            HorizontalOptions="Center" VerticalOptions="Center"
            HorizontalTextAlignment="Center"
            Text="{Binding ChosenStudentName}"
            TextColor="{StaticResource Primary}"
            FontSize="50"         
            />
    </Grid>
</ContentPage>