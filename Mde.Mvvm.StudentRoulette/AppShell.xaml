<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="Mde.Mvvm.StudentRoulette.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:Mde.Mvvm.StudentRoulette.Pages"
    Shell.FlyoutBehavior="Flyout">

    <ShellContent
        Title="Students"
        ContentTemplate="{DataTemplate local:StudentListPage}"
        Route="StudentListPage" />
    
    <ShellContent
        Title="Add"
        ContentTemplate="{DataTemplate local:StudentFormPage}"
        Route="StudentFormPage" />

</Shell>
